@model IEnumerable<WebMotors.Domain.Entities.Anuncio>

@{
    ViewBag.Title = ":: WebMotors ::";
}

<div class="col-lg-12">
    <h1 class="page-header">Anúncios</h1>
</div>
<div class="col-lg-12">

    <div class="row botao">
        <a href="@Url.Action("Cadastrar")" class="btn btn-success">
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            Novo Anúncio
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading" style="margin: 30px 20px; font-size: 18px; font-weight: 900;">Lista</div>
            <div class="panel-body">
                <div class="row">
                    <div class="container">
                        <div class="col-lg-10">

                            <table class="table table-responsive table-condensed">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Código")
                                    </th>
                                    <th>
                                        @Html.Label("Marca")
                                    </th>
                                    <th>
                                        @Html.Label("Modelo")
                                    </th>
                                    <th>
                                        @Html.Label("Versão")
                                    </th>
                                    <th>
                                        @Html.Label("Ano")
                                    </th>
                                    <th>
                                        @Html.Label("Quilometragem")
                                    </th>
                                    <th>
                                        @Html.Label("Observação")
                                    </th>
                                    <th>Ações</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Marca)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Modelo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Versao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ano)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quilometragem)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Observacao)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Editar",new { id = item.Id })" class="btn btn-primary">
                                                Editar
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                            </a>
                                            <a href="@Url.Action("Excluir",new { id = item.Id})" class="btn btn-danger">
                                                Excluir
                                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
