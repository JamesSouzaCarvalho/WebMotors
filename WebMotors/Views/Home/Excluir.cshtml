@model WebMotors.Domain.Entities.Anuncio

@{
    ViewBag.Title = ":: WebMotors ::";
}

<div class="col-lg-13">
    <h1 class="page-header">Anúncios</h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-danger">
            <div class="panel-heading">Excluir</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-10">

                        <h3>Tem certeza que deseja excluir?</h3>
                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.Label("Nome Modelo")
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Modelo)
                                </dd>

                            </dl>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Excluir" id="Excluir" name="Excluir" class="btn btn-danger" /> 
                                <a href="@Url.Action("Listar")" class="btn btn-default">Voltar</a>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
